- order_items.each do |item|
  .general-cart-item.divider-lg
    .general-img-wrap-table
      %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
    %p.title= item.product.name
    %P.in-grey-600.fw-300= item.product.description
    %table.table
      %tr
        %td
          %span.in-grey-600= t('checkout.confirm.title_price')
        %td
          %span.font-16.in-gold-500= "€ #{item.price}"
      %tr
        %td.vertical-middle
          %span.in-grey-600= t('checkout.confirm.title_quantity')
        %td
          %span= item.quantity
      %tr
        %td
          %span.in-grey-600= t('checkout.confirm.title_total')
        %td
          %span.font-16.in-gold-500= "€ #{item.item_total_price}"
