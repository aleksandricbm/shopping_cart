%table.table.table-hover
  %thead
    %tr
      %th
        %span.in-grey-600= t('checkout.confirm.title_book')
      %th.col-method
      %th
        %span.in-grey-600= t('checkout.confirm.title_price')
      %th
        %span.in-grey-600= t('checkout.confirm.title_quantity')
      %th
        %span.in-grey-600= t('checkout.confirm.title_total')
  %tbody
    - order_items.each do |item|
      %tr
        %td
          .general-img-wrap-table
            = image_tag number_image(item.book, 0), alt: 'book-img', class: 'cart-img-shadow pull-left'
        %td
          %p.title= item.book.name
          %p.in-grey-600.fw-300= item.book.description
        %td
          %span.font-16.in-gold-500= "€ #{item.price}"
        %td
          %span.ml-30= item.quantity
        %td
          %span.font-16.in-gold-500= "€ #{item.item_total_price}"
