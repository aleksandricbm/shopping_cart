%main.container.general-main-wrap
  .hidden-xs.hidden-sm
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
        .text-center
          %h3.general-subtitle.mt-0= 'Returning Customer'
          %a.general-login-icon{ href: main_app.user_facebook_omniauth_authorize_path }
            %i.fa.fa-facebook-official
          %p.general-login-text= 'Or'
        = form_for(User.new, url: main_app.user_session_path, html: { class: 'general-form' }) do |f|
          .form-group.mb-40
            %p.fw-600= t('checkout.login.login_wth_pass')
            = f.label :email, t('checkout.login.enter_email'), class: 'control-label input-label'
            = f.email_field :email, placeholder: "Enter Email", autofocus: true, class: 'form-control'
          .form-group.mb-40
            = f.label :password, t('settings.password'), class: 'control-label input-label'
            = f.password_field :password, placeholder: 'Password', class: 'form-control'
            %a.help-block.in-gold-500{ href: main_app.new_user_password_path }= 'Forgot Password'
          .text-left
          = f.submit t('checkout.login.login_wth_pass'), class: 'button btn btn-default mb-20'
      .col-md-5.mb-40
        .visible-xs.visible-sm
        .text-center
          %h3.general-subtitle.mt-0= 'New Customer'
          %a.general-login-icon{href: main_app.user_facebook_omniauth_authorize_path}
            %i.fa.fa-facebook-official
          %p.general-login-text= 'Or'
        = form_for(User.new, url: main_app.user_registration_path, html: { class: 'general-form' }) do |f|
          .form-group.mb-40
            %p.fw-600= t('checkout.login.quick_login')
            %p.fw-300= t('checkout.login.quick_descr')
            = f.label :email, t('checkout.login.enter_email'), class: 'control-label input-label'
            = f.email_field :email, placeholder: "Enter Email", class: 'form-control'
            - password = Devise.friendly_token.first(20)
            = f.hidden_field :password, value: password
            = f.hidden_field :password_confirmation, value: password
          .text-left
          = f.submit t('checkout.login.butt_con_check'), class: 'button btn btn-default mb-20'
