%main.container
  %h1.general-title-margin= t('settings.title')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: settings_address_path }= t('settings.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: settings_privacy_path }= t('settings.privacy')
  .tab-content
    #address.tab-pane.fade.in.active{role: "tabpanel", class: ".general-main-wrap"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t("settings.b_address")
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t("settings.s_address")
      .row
      = form_for @address, url: settings_address_path() do |f|
        .col-md-5.mb-40
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.b_address")
          = render template: 'forms/address.haml', locals: {f: f, address: @address.billing}
        .col-md-5.col-md-offset-1.mb-25
          .visible-xs.visible-sm
            %h3.general-subtitle.mt-0= t("settings.s_address")
          = render template: 'forms/address.haml', locals: {f: f, address: @address.shipping}
          .text-center.general-text-align
          %button.btn= t('button.save')
    / #privacy.tab-pane.fade{role: "tabpanel"}
    /   .row.mb-60
    /     .col-sm-5
    /       = render 'change_email'
    /     .col-sm-5.col-sm-offset-1
    /       = render 'change_password'
    /     .col-sm-12
    /       = render 'remove_account'
